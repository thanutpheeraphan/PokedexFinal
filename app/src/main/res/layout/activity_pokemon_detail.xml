<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pokedex_kotlin_final.pokemon_detail">


    <ImageView
        android:id="@+id/pokemon_get_image"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toStartOf="@+id/shiny_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Switch
        android:id="@+id/shiny_switch"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="75dp"
        android:text="Shiny"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_get_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pokemon_get_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:text="#001"
        app:layout_constraintEnd_toStartOf="@+id/pokemon_name"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_get_image" />

    <TextView
        android:id="@+id/pokemon_base_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="4dp"
        android:text="Base experience"
        app:layout_constraintEnd_toEndOf="@+id/pokemon_id"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_id" />

    <TextView
        android:id="@+id/pokemon_get_base_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_height"
        app:layout_constraintStart_toEndOf="@+id/pokemon_base_exp" />

    <TextView
        android:id="@+id/pokemon_get_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_height"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_get_height" />

    <TextView
        android:id="@+id/pokemon_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Height"
        app:layout_constraintEnd_toEndOf="@+id/pokemon_weight"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_base_exp" />

    <TextView
        android:id="@+id/pokemon_get_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_base_exp"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_get_base_exp" />

    <TextView
        android:id="@+id/pokemon_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="17dp"
        android:text="Weight"
        app:layout_constraintEnd_toStartOf="@+id/pokemon_get_weight"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_height" />

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bulbasaur"
        android:textAllCaps="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/pokemon_id"
        app:layout_constraintEnd_toEndOf="@+id/pokemon_get_image"
        app:layout_constraintStart_toEndOf="@+id/pokemon_get_image" />

    <TextView
        android:id="@+id/pokemon_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="5dp"
        android:text="Type"
        app:layout_constraintStart_toStartOf="@+id/pokemon_weight"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_get_weight" />

    <TextView
        android:id="@+id/pokemon_get_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:text="Grass"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/pokemon_types"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_types" />

    <TextView
        android:id="@+id/pokemon_get_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Poison"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@+id/pokemon_types"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_types" />

    <TextView
        android:id="@+id/pokemon_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="356dp"
        android:layout_marginBottom="3dp"
        android:text="Moves"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_type1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_moves">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_moves"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
