<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pokedex_kotlin_final.pokemon_detail">

    <ImageView
        android:id="@+id/pokemon_get_image"
        android:layout_width="94dp"
        android:layout_height="102dp"

        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/pokemon_special_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Special Attack"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/pokemon_get_special_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_special_defense"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_special_attack" />

    <TextView
        android:id="@+id/pokemon_get_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Grass"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@+id/pokemon_types"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_types" />

    <TextView
        android:id="@+id/pokemon_get_base_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_base_exp"
        app:layout_constraintTop_toTopOf="@+id/pokemon_base_exp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Attack"
        app:layout_constraintStart_toStartOf="@+id/pokemon_hp"
        app:layout_constraintTop_toTopOf="@+id/pokemon_hp" />

    <TextView
        android:id="@+id/pokemon_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="HP"
        app:layout_constraintStart_toStartOf="@+id/pokemon_weight"
        app:layout_constraintTop_toTopOf="@+id/pokemon_weight" />

    <TextView
        android:id="@+id/pokemon_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:text="Type"
        app:layout_constraintEnd_toStartOf="@+id/pokemon_hp"
        app:layout_constraintTop_toBottomOf="@+id/shiny_switch" />

    <TextView
        android:id="@+id/pokemon_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Height"
        app:layout_constraintStart_toStartOf="@+id/pokemon_base_exp"
        app:layout_constraintTop_toTopOf="@+id/pokemon_base_exp" />

    <TextView
        android:id="@+id/pokemon_get_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_hp" />

    <TextView
        android:id="@+id/pokemon_get_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_defense"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_attack" />

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bulbasaur"

        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@+id/pokemon_id"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_id" />

    <TextView
        android:id="@+id/pokemon_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Weight"
        app:layout_constraintStart_toStartOf="@+id/pokemon_height"
        app:layout_constraintTop_toTopOf="@+id/pokemon_height" />

    <TextView
        android:id="@+id/pokemon_get_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_defense" />

    <TextView
        android:id="@+id/pokemon_get_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_height"
        app:layout_constraintTop_toTopOf="@+id/pokemon_name" />

    <TextView
        android:id="@+id/pokemon_get_special_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_special_attack"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_speed" />

    <TextView
        android:id="@+id/pokemon_get_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_weight"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_height" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Speed"
        app:layout_constraintStart_toStartOf="@+id/pokemon_defense"
        app:layout_constraintTop_toTopOf="@+id/pokemon_defense" />

    <TextView
        android:id="@+id/pokemon_get_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Poison"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_type1"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_type1" />

    <TextView
        android:id="@+id/pokemon_get_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/pokemon_hp"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_weight" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="204dp"
        android:layout_height="132dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/pokemon_get_description"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_description"
        app:layout_constraintTop_toTopOf="@+id/pokemon_moves">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_moves"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/pokemon_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="Moves"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_get_description" />

    <Switch
        android:id="@+id/shiny_switch"
        android:layout_width="94dp"
        android:layout_height="21dp"
        android:layout_marginTop="104dp"
        android:text="Shiny"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_image"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_image" />

    <TextView
        android:id="@+id/pokemon_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Defense"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/pokemon_base_exp"
        android:layout_width="95dp"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"

        android:text="Base experience"
        app:layout_constraintStart_toStartOf="@+id/pokemon_name"
        app:layout_constraintTop_toTopOf="@+id/pokemon_name" />

    <TextView
        android:id="@+id/pokemon_special_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Special Defense"
        app:layout_constraintStart_toStartOf="@+id/pokemon_special_attack"
        app:layout_constraintTop_toTopOf="@+id/pokemon_special_attack" />

    <TextView
        android:id="@+id/pokemon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:text="#001"
        app:layout_constraintStart_toEndOf="@+id/pokemon_get_image"
        app:layout_constraintTop_toTopOf="@+id/pokemon_get_image" />

    <TextView
        android:id="@+id/pokemon_get_description"
        android:layout_width="201dp"
        android:layout_height="116dp"
        android:layout_marginStart="188dp"
        android:layout_marginEnd="80dp"
        android:text="Voltorb is extremely sensitive—it explodes at the slightest of shocks. It is rumored that it was first created when a Poké Ball was exposed to a powerful pulse of energy."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/shiny_switch"
        app:layout_constraintEnd_toStartOf="@+id/pokemon_get_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="Description    "
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_get_description"
        app:layout_constraintEnd_toStartOf="@+id/pokemon_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemon_get_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
